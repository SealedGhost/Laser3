<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/practice">

    <TextView
        android:id="@+id/tv_exercise_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:background="@drawable/back"

        android:layout_alignTop="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_practice_start"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/pressed"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exerciseBrief"
        android:paddingTop="10dp"
        android:id="@+id/textView6"

        android:lineSpacingExtra="9dp"
        android:textColor="#ffffff"
        android:textSize="25sp"

        android:gravity="center_horizontal|left"
        android:textIsSelectable="false"

        android:layout_marginLeft="50dp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
         />

    <TextView
        android:id="@+id/tv_practiceend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed"
        android:gravity="center"
        android:text="@string/end"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignTop="@+id/tv_practice_start"
        android:layout_alignBottom="@+id/tv_practice_start"
        android:layout_alignEnd="@+id/textView6"
        android:layout_below="@id/textView6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="练习模式"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>
