<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/shoot">


    <TextView
        android:id="@+id/tv_common"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"

        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode1"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginStart="150dp"
         />
    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode2"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_below="@+id/tv_common"
        android:layout_alignStart="@+id/tv_common"
        android:layout_alignEnd="@+id/tv_common"

    />

    <TextView
        android:id="@+id/tvmode3time"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/tv_challenge"
        android:layout_alignLeft="@+id/tvmode1time"
        android:layout_marginBottom="20dp"
        android:background="@drawable/show"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignEnd="@+id/tvmode2time"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvmode2time"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/tv_progress"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@id/tvmode1time"
        android:layout_alignEnd="@+id/tvmode1time"
        android:background="@drawable/show"
        android:textSize="@android:dimen/app_icon_size"
        android:gravity="center_vertical|center_horizontal"
        android:textIsSelectable="false"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_challenge"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/tv_progress"
        android:layout_below="@+id/tv_progress"
        android:background="@drawable/model"
        android:gravity="center"
        android:text="@string/mode3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignEnd="@+id/tv_progress"
        />

    <TextView
        android:id="@+id/tv_compete_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/back"
        android:layout_alignTop="@+id/tv_set"
        android:layout_toStartOf="@+id/tv_set" />

    <TextView
        android:id="@+id/tv_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/set"
         android:layout_alignParentEnd="true"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/tvmode1time"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginRight="90dp"
        android:background="@drawable/show"
        android:gravity="center_vertical|center_horizontal"
        android:text="1"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="#ffffff"
        android:clickable="false"
        android:editable="false"
        android:layout_alignBottom="@+id/tv_common"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/tv_common"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hitBrief"
        android:id="@+id/textView7"


        android:lineSpacingExtra="9dp"
        android:layout_alignTop="@+id/tvmode1time"
        android:layout_toRightOf="@id/tvmode1time"
        android:textSize="25sp"
        android:gravity="center_horizontal|left"
        android:paddingTop="10dp"
        android:textColor="#ffffff"

        android:layout_alignBottom="@+id/tvmode3time"
        android:layout_marginEnd="80dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="打靶模式"
        android:textColor="#ffffff"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>
